 
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <h3 class="title has-text-grey">Login</h3>
                <p class="subtitle has-text-grey">Please login to proceed.</p>
                <div class="box">
                  
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="field">
                            <div class="control has-icons-left">
                            <%= f.email_field :email, autofocus: true, autocomplete: "Your Login", class: "input is-large" %>
                                 <span class="icon is-small is-left">
                                  <i class="fas fa-user"></i>
                                </span>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control has-icons-left">
                                <%= f.password_field :password, autocomplete: "current-password", class: "input is-large" %>
                                <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                                </span>
                            </div>
                        </div>
                        <div class="field">
                       <% if devise_mapping.rememberable? %>
          
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                        
                          <% end %>

                        </div>
                            <%= f.submit "Log in", class: "button is-block is-info is-large is-fullwidth" %>
                     
                    </form>
                </div>
                <p class="has-text-grey">           
                      <%= render "devise/shared/links" %>
                </p>
            </div>
        </div>
 
 

  </div>
<% end %>

